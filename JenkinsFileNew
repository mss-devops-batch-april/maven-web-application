node {

def mavenHome = tool name: "maven3.8.4"

properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')), [$class: 'JobLocalConfiguration', changeReasonComment: ''], pipelineTriggers([cron('* * * * *')])])
    
    echo "Job name is: ${env.JOB_NAME}"
    echo "Node name is: ${env.NODE_NAME}"
    echo "Build name is: ${env.BUILD_NUMBER}"
    
  stage('checkout')
  {
  git branch: 'development', credentialsId: '9aae6ee4-4d9c-4109-97f2-80a1a6330cdc', url: 'https://github.com/mss-devops-batch-april/maven-web-application.git'
  }

 stage('build')
 {
 sh "${mavenHome}/bin/mvn clean package"
 }
